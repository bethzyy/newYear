/* pages/index/index.wxss */
.container {
  position: relative;
  width: 100vw;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

/* 红包主体 */
.red-packet {
  width: 500rpx;
  height: 700rpx;
  position: relative;
  cursor: pointer;
  transition: transform 0.3s ease;
  z-index: 10;
}

.red-packet:active {
  transform: scale(0.95);
}

.red-packet.active {
  animation: pulse 0.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

/* 红包上半部分 */
.packet-top {
  width: 100%;
  height: 450rpx;
  background: linear-gradient(180deg, #FFD700 0%, #FFA500 50%, #FF8C00 100%);
  border-radius: 30rpx 30rpx 150rpx 150rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
  border: 4rpx solid #FFD700;
}

.packet-top::before {
  content: '';
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  right: 20rpx;
  bottom: 20rpx;
  border: 3rpx solid #8B4513;
  border-radius: 20rpx 20rpx 140rpx 140rpx;
  background: linear-gradient(180deg, #FFD700 0%, #FFA500 100%);
  opacity: 0.3;
}

/* 红包文字 */
.main-text {
  font-size: 72rpx;
  font-weight: bold;
  color: #8B0000;
  text-shadow: 2rpx 2rpx 4rpx rgba(255, 255, 255, 0.5);
  margin-bottom: 20rpx;
  letter-spacing: 8rpx;
  z-index: 2;
  font-family: "KaiTi", "STKaiti", serif;
}

.sub-text {
  font-size: 36rpx;
  color: #8B0000;
  z-index: 2;
  letter-spacing: 4rpx;
  font-family: "KaiTi", "STKaiti", serif;
}

/* 红包下半部分 */
.packet-bottom {
  width: 100%;
  height: 250rpx;
  background: linear-gradient(180deg, #C8161D 0%, #8B0000 100%);
  border-radius: 20rpx 20rpx 30rpx 30rpx;
  position: absolute;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
  border: 4rpx solid #FFD700;
  overflow: hidden;
}

/* 马的图案 */
.horse-icon {
  width: 200rpx;
  height: 200rpx;
  animation: horseShake 2s ease-in-out infinite;
}

@keyframes horseShake {
  0%, 100% {
    transform: rotate(-5deg);
  }
  50% {
    transform: rotate(5deg);
  }
}

/* 动画容器 */
.animation-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 5;
}

/* 浮动元素 */
.floating-item {
  position: absolute;
  animation: floatUp 3s ease-out forwards;
}

@keyframes floatUp {
  0% {
    opacity: 1;
    transform: translateY(0) rotate(0deg) scale(0.5);
  }
  50% {
    opacity: 1;
    transform: translateY(-50vh) rotate(180deg) scale(1);
  }
  100% {
    opacity: 0;
    transform: translateY(-100vh) rotate(360deg) scale(1.2);
  }
}

/* 图片元素 */
.item-image {
  width: 120rpx;
  height: 120rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.3));
}

/* 文字元素 */
.item-text {
  font-weight: bold;
  text-shadow: 2rpx 2rpx 4rpx rgba(255, 215, 0, 0.8);
  white-space: nowrap;
}
